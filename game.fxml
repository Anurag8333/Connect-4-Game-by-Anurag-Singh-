<GridPane fx:id="rootGridPane" style="-fx-background-color: #00ffee;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.anurag.connectFour.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints maxWidth="319.0" minWidth="195.0" prefWidth="202.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="25.0" minHeight="10.0" prefHeight="25.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2" />
      <Pane fx:id="insertDiscPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
      <VBox prefHeight="430.0" prefWidth="324.0" style="-fx-background-color: #2b3b4c;" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="playerOne" alignment="CENTER" prefHeight="31.0" prefWidth="236.0" promptText="Player 1 Name" style="-fx-max-width: 200;">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font></TextField>
            <TextField fx:id="playerTwo" alignment="CENTER" promptText="Player 2 Name" style="-fx-max-width: 200;">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font></TextField>
            <Button fx:id="startGameBtn" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="203.0" style="-fx-background-color: #2cfa02;" text="Start Game">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Button>
            <Region prefHeight="97.0" prefWidth="202.0" />
            <Label fx:id="playerTurn" alignment="CENTER" prefHeight="17.0" prefWidth="324.0" text="Player One" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="29.0" />
               </font></Label>
            <Label alignment="CENTER" prefHeight="38.0" prefWidth="314.0" text="Turn" textFill="WHITE">
               <font>
                  <Font size="26.0" />
               </font></Label>
            <Region prefHeight="200.0" prefWidth="200.0" />
         </children></VBox>
    </children>
</GridPane>
